extends layout

block content
    table
        tr
            th Ime
            th Opis
            th Cijena
            th Pocetak
            th Kraj
            if isLeader
                th Akcije
        each project, index in projects
            tr
                td= project.name
                td= project.description
                td= project.price
                td= project.start
                td= project.end
                if isLeader
                    td
                        if isLeader
                            a(href='/projects/delete/' + project._id) Delete
                        if isLeader
                            a(href='/projects/add-member/' + project._id) AddMember
                        if isLeader
                            a(href='/projects/archive/' + project._id) Archive
                        a(href='/projects/edit/' + project._id) Edit